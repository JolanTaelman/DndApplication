<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.LoginFragment" android:id="@+id/frameLayout">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="264dp"
                android:layout_height="24dp"
                android:text="@string/anonymous_name"
                android:ems="10"
                android:id="@+id/LoginNaamId"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="348dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp" app:layout_constraintHorizontal_bias="0.496"/>
        <EditText
                android:layout_width="264dp"
                android:layout_height="43dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/AnonymousNameId"
                app:layout_constraintStart_toStartOf="@+id/LoginNaamId"
                app:layout_constraintEnd_toEndOf="@+id/LoginNaamId" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/LoginNaamId" app:layout_constraintHorizontal_bias="0.0"/>
        <Button
                android:text="@string/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LoginButton"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/AnonymousNameId"
                app:layout_constraintEnd_toEndOf="@+id/AnonymousNameId"
                app:layout_constraintStart_toStartOf="@+id/AnonymousNameId"/>
        <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/LoginButton"
                app:layout_constraintEnd_toEndOf="@+id/LoginButton"
                app:layout_constraintStart_toStartOf="@+id/LoginButton" app:layout_constraintHorizontal_bias="0.487"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>